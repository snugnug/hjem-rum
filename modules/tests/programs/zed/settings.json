{
  "autosave": "on_focus_change",
  "base_keymap": "Atom",
  "buffer_font_fallbacks": [
    "Nerd Font"
  ],
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ],
          "command": "prettier"
        }
      },
      "tab_size": 2
    }
  },
  "load_direnv": "shell_hook",
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system"
  }
}
